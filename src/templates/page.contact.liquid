{{ 'contact-page.scss' | asset_url | stylesheet_tag }}

<div class="sdc-shopify-contact-page-content">

  {% form 'contact' %}
  
	<!-- Only show the form fields when it has not been submitted successfully. -->
    {% if form.posted_successfully? %}
  
  		<h1>Thanks!</h1>
        <div class="rte text-above-contact-form">
          {{ 'contact.form.post_success' | t }}
        </div>
  		
  		<a href="/" class="button">Continue shopping</a>
  
    {% else %}
  	 
      <h1>{{ page.title }}</h1>

      <div class="rte text-above-contact-form">
        {{ page.content }}
      </div>
  
      {% if form.errors %}
          <div class="form-errors">
            <p>Uh oh! Looks like the form did not submit successfully. Please address the following errors, and resubmit.</p>
            {{ form.errors | default_errors }}
          </div>
      {% endif %}
	
      <div class="input-container">
        <label for="ContactFormName">{{ 'contact.form.name' | t }}</label>
        <input type="text"
          name="contact[name]"
          id="ContactFormName"
          placeholder="{{ 'contact.form.name' | t }}"
          value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
          <span class="input-error-message">Please enter your name.</span>
      </div>
	  
      <div class="input-container">
        <label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
        <input type="email"
          name="contact[email]"
          id="ContactFormEmail"
          placeholder="{{ 'contact.form.email' | t }}"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off">
        <span class="input-error-message">Please enter a valid email.</span>
      </div>

      <div class="input-container">
        <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
        <input type="tel"
          name="contact[phone]"
          id="ContactFormPhone"
          placeholder="{{ 'contact.form.phone' | t }}"
          value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          pattern="[0-9\-]*"
          maxlength="15">
        <span class="input-error-message">Please enter a valid phone number.</span>
      </div>
	
  	  <div class="input-container">
        <label for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
        <textarea rows="10"
          name="contact[body]"
          id="ContactFormMessage"
          placeholder="{{ 'contact.form.message' | t }}">
          {%- if form.body -%}
            {{- form.body -}}
          {%- endif -%}
        </textarea>
        <span class="input-error-message">Please enter a message.</span>
      </div>

      <input type="submit" class="button" value="{{ 'contact.form.send' | t }}">
	{% endif %}
  
  {% endform %}
  
  {{ 'contact-page.js' | asset_url | script_tag }}
</div>
