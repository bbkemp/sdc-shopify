{%- assign bg_color = section.settings.background_color -%}
{%- assign logoImage = section.settings.logo_image -%}
{%- assign personImage = section.settings.person_image -%}


<section class="section section-masthead full-width" style="background-color: {{bg_color}};">
    <div class="container">
    	{%- if logoImage -%}
        <img src="{{ logoImage |  img_url: '1000x' }}" alt="">
			{%- endif -%}
      	{%- if personImage -%}
        <img src="{{ personImage |  img_url: '1000x' }}" alt="">
			{%- endif -%}
    </div>
</section><!-- /.section section-intro -->

{% schema %}
{
	"name": "Masthead",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F7F5F2"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image"
    },
    {
      "type": "image_picker",
      "id": "person_image",
      "label": "Person image"
    }
  ],
	"presets": [
		{
			"name": "Masthead",
			"category": "content"
		}
	]
}
{% endschema %}
