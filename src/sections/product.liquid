
<div data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true" class="container">

  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
  <div class="product-info-section section">
    <div class="product-info-gallery" data-hide-until-load>

      {% if product.metafields.sdc.use_variant_images %}
        {% for c_variant in product.variants %}
        <div class="photo-main-image sdc-using-variant-images slickCar {% if current_variant.title != c_variant.title %}sdc-active-variant{% endif %}" data-target-thumbs="#slickThumb-{{c_variant.title | escape}}" data-variant="{{c_variant.title | escape}}" id="slickCar-{{c_variant.title | escape}}">
          {% assign img_thumbnails = "" %}
          {% for i in (1..4) %}
            {% assign img_key = 'image' | append: i %}
            {% if c_variant.metafields.sdc[img_key] %}
              <img src="{{ c_variant.metafields.sdc[img_key] }}" alt="" class="" data-variant="{{ c_variant.title | escape }}" />

              {% comment %}Prepare thumbnails here so we don't have to double loop{% endcomment %}
              {% capture img_thumbnails %}{{img_thumbnails}}
                <li class="" data-variant="{{ c_variant.title | escape }}">
                  <img src="{{ c_variant.metafields.sdc[img_key] }}" alt="" class="product-single__thumbnail-image" />
                </li>
              {% endcapture %}
            {% endif %}
          {% endfor %}
        </div>
        <ul class="photo-thumbnails sdc-using-variant-images slickThumb {% if current_variant.title != c_variant.title %}sdc-active-variant{% endif %}" id="slickThumb-{{c_variant.title | escape}}" data-target-car="#slickCar-{{c_variant.title | escape}}" data-variant="{{c_variant.title | escape}}">
          {{img_thumbnails}}
        </ul>
        {% endfor %}

      {% else %}

        <div class="photo-main-image slickCar" id="slickCar" data-target-thumbs="#slickThumbs">
          {% for image in product.images %}
            <img src="{{ image.src | img_url: '1200x1200'}}" alt="{{ image.alt | escape }}" />
          {% endfor %}
          {% comment %}Vimeo embed code{% endcomment %}
          {% if product.metafields.videos.video1_enabled and product.metafields.videos.video1_url %}
            <div data-video-id="video1" class="vimeo-video">
              <iframe src="https://player.vimeo.com/video/{{ product.metafields.videos.video1_url | split: '/' | last }}?title=0&byline=0&portrait=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            </div>
          {% endif %}
          {% if product.metafields.videos.video2_enabled and product.metafields.videos.video2_url %}
            <div data-video-id="video2" class="vimeo-video">
              <iframe src="https://player.vimeo.com/video/{{ product.metafields.videos.video2_url | split: '/' | last }}?title=0&byline=0&portrait=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            </div>
          {% endif %}
        </div>
        {% if product.images.size > 1 %}
          <ul class="photo-thumbnails slickThumb" id="slickThumbs" data-target-car="#slickCar">
            {% for image in product.images %}
              <li>
                  <img class="product-single__thumbnail-image" src="{{ image.src | img_url: '120x120' }}" alt="{{ image.alt | escape }}">
              </li>
            {% endfor %}
            {% if product.metafields.videos.video1_enabled and product.metafields.videos.video1_url and product.metafields.videos.video1_thumbnail %}
            <li>
              <img class="product-single__thumbnail-image" src="{{product.metafields.videos.video1_thumbnail}}" alt="{{product.title}} video" data-image-id="video1">
            </li>
            {% endif %}
            {% if product.metafields.videos.video2_enabled and product.metafields.videos.video2_url and product.metafields.videos.video2_thumbnail %}
            <li>
              <img class="product-single__thumbnail-image" src="{{product.metafields.videos.video2_thumbnail}}" alt="{{product.title}} video" data-image-id="video2">
            </li>
            {% endif %}
          </ul>
        {% endif %}
      {% endif %}
    </div>
    <div class="product-info-content">
      {% comment %} <div class="product-info-breadcrumbs">
        <p>Shop / bright on<sup>&trade;</sup> / {{ product.title }} </p>
      </div> {% endcomment %}
      <h1>{{ product.title }}</h1>
      <div data-price-wrapper>
          {% if product.compare_at_price_max > product.price %}
            <span class="visually-hidden" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
            <s data-compare-price class="product-info-price compare-price">
              {% if current_variant.compare_at_price > current_variant.price %}
                {{ current_variant.compare_at_price | money }}
              {% endif %}
            </s>
          {% endif %}

          <span data-product-price class="product-info-price">
            {{ current_variant.price | money }}
          </span>
      </div>
      <div
        class="yotpo bottomLine yotpo-rating-info"
        data-product-id="{{ product.id }}">
      </div>
      <form action="/cart/add" id="product-form"method="post" enctype="multipart/form-data">
        {% unless product.has_only_default_variant %}
          {% for option in product.options_with_values %}
            <div class="selector-wrapper js hidden-selector">
              <label for="SingleOptionSelector-{{ forloop.index0 }}">
                {{ option.name }}
              </label>

              <select
                id="SingleOptionSelector-{{ forloop.index0 }}"
                data-single-option-selector
                data-index="option{{ option.position }}">
                {% for value in option.values %}
                  <option
                    value="{{ value | escape }}"
                    {% if option.selected_value == value %}selected="selected"{% endif %}>
                      {{ value }}
                  </option>
                {% endfor %}
              </select>
            </div>
            <div class="product-info-variant-options">
              {% for value in option.values %}
                    <a
                      href="#"
                      data-value="{{ value | escape }}"
                      class="button button--transparent {% if option.selected_value == value %} selected {% endif %}"
                    >
                      {{ value }}
                    </a>
                  {% endfor %}
            {% endfor %}
          </div>
        {% endunless %}

        <select name="id" class="no-js" data-product-select>
          {% for variant in product.variants %}
            <option
              {% if variant == current_variant %}selected="selected"{% endif %}
              {% unless variant.available %}disabled="disabled"{% endunless %}
              value="{{ variant.id }}">
                {{ variant.title }}
            </option>
          {% endfor %}
        </select>
        <div class="product-quantity">
          <label for="Quantity">QTY</label>
          <input type="number" id="Quantity" name="quantity" value="1" min="1" max="99">
        </div>

        <button
          type="submit"
          name="add"
          class="button"
          data-add-to-cart
          {% unless current_variant.available %}disabled="disabled"{% endunless %}>
            <span data-add-to-cart-text>
              {% if current_variant.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </span>
        </button>
      </form>
      <div class="rte product-info-description">
          {% if product.has_only_default_variant %}
            {{ product.description }}
          {% else %}
            <div class="product-info--description-slider">
            {% for variant in product.variants %}
              <div class="product-info--description-variant-slide {% if current_variant.title == variant.title %} active {% endif %}" data-value="{{ variant.title | escape }}">
                {{ variant.metafields.info.variant_description }}
              </div>
            {%  endfor %}
            </div>
          {% endif %}
      </div>
      {% unless product == empty %}
        <script type="application/json" data-product-json>
          {{ product | json }}
        </script>
      {% endunless %}
      </div>
  </div>
</div>
{% comment %} exit container for full width {% endcomment %}

{% if product.metafields.extra_info.column_1_header %}
<div class="extra-info-wrapper full-width section">
  <div class="extra-info-content container">
    <div class="extra-info-block">
      <h3>{{product.metafields.extra_info.column_1_header}}</h3>
      {{product.metafields.extra_info.column_1_body}}
    </div>

    <div class="extra-info-block">
      <h3>{{product.metafields.extra_info.column_2_header}}</h3>
      {{product.metafields.extra_info.column_2_body}}
    </div>

    <div class="extra-info-block">
      {% if product.metafields.extra_info.column_3_header %}
          <h3>{{product.metafields.extra_info.column_3_header}}</h3>
          {{product.metafields.extra_info.column_3_body}}
      {% elsif  product.metafields.extra_info.stat_1_icon %}
        <div class="extra-info-block__stats">
          <ul>
            <li>{% include {{product.metafields.extra_info.stat_1_icon}} %} {{product.metafields.extra_info.stat_1_title}}</li>
            {% if product.metafields.extra_info.stat_2_icon %}
              <li>{% include product.metafields.extra_info.stat_2_icon %} {{product.metafields.extra_info.stat_2_title}}</li>
            {% endif %}
            {% if product.metafields.extra_info.stat_3_icon %}
              <li>{% include product.metafields.extra_info.stat_3_icon %} {{product.metafields.extra_info.stat_3_title}}</li>
            {% endif %}
            {% if product.metafields.extra_info.stat_4_icon %}
              <li>{% include product.metafields.extra_info.stat_4_icon %} {{product.metafields.extra_info.stat_4_title}}</li>
            {% endif %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</div>

