
<div data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true" class="container">

  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
  <div class="product-info-section section">
    <div class="product-info-gallery" >
      <div class="photo-main-image">
        {% for image in product.images %}
          <img
            src="{{ image.src | img_url: '1200x1200'}}"
            alt="{{ image.alt | escape }}"
            data-product-image-wrapper
            data-product-featured-image
            data-image-id="{{ image.id }}""
          />
        {% endfor %}
        {% comment %}Vimeo embed code{% endcomment %}
        {% if product.metafields.videos.video1_enabled and product.metafields.videos.video1_url %}
          <div data-video-id="video1" class="vimeo-video">
            <iframe src="https://player.vimeo.com/video/{{ product.metafields.videos.video1_url | split: '/' | last }}?title=0&byline=0&portrait=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          </div>
        {% endif %}
        {% if product.metafields.videos.video2_enabled and product.metafields.videos.video2_url %}
          <div data-video-id="video2" class="vimeo-video">
            <iframe src="https://player.vimeo.com/video/{{ product.metafields.videos.video2_url | split: '/' | last }}?title=0&byline=0&portrait=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          </div>
        {% endif %}
      </div>
      <ul class="photo-thumbnails product-single__photos" data-product-id="{{ product.id}}" data-current-variant-id="{{current_variant.id}}">
        {% for image in product.images %}
          <li>
              <img class="product-single__thumbnail-image" src="{{ image.src | img_url: '120x120' }}" alt="{{ image.alt | escape }}" data-image-id="{{ image.id }}">
          </li>
        {% endfor %}
          {% if product.metafields.videos.video1_enabled and product.metafields.videos.video1_url and product.metafields.videos.video1_thumbnail %}
          <li>
            <img class="product-single__thumbnail-image" src="{{product.metafields.videos.video1_thumbnail}}" alt="{{product.title}} video" data-image-id="video1">
          </li>
          {% endif %}
          {% if product.metafields.videos.video2_enabled and product.metafields.videos.video2_url and product.metafields.videos.video2_thumbnail %}
          <li>
            <img class="product-single__thumbnail-image" src="{{product.metafields.videos.video2_thumbnail}}" alt="{{product.title}} video" data-image-id="video2">
          </li>
          {% endif %}
      </ul>
    </div>
    <div class="product-info-content">
      <h1>{{ product.title }}</h1>
      <div data-price-wrapper>
          {% if product.compare_at_price_max > product.price %}
            <span class="visually-hidden" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
            <s data-compare-price class="product-info-price compare-price">
              {% if current_variant.compare_at_price > current_variant.price %}
                {{ current_variant.compare_at_price | money }}
              {% endif %}
            </s>
          {% endif %}

          <span data-product-price class="product-info-price" >
            {{ current_variant.price | money | remove: ','}}
          </span>
        </div>
<form action="/cart/add" method="post" id="product-form"enctype="multipart/form-data">
    {% unless product.has_only_default_variant %}
      {% for option in product.options_with_values %}
        <div class="selector-wrapper js">

          <label for="SingleOptionSelector-{{ forloop.index0 }}">
            {{ option.name }}
          </label>

          <select
            id="SingleOptionSelector-{{ forloop.index0 }}"
            data-single-option-selector
            data-option-name="{{option.name}}"
            data-index="option{{ option.position }}">
            {% for value in option.values %}
              <option
                value="{{ value | escape }}"
                {% if option.selected_value == value %}selected="selected"{% endif %}>
                  {{ value }}
              </option>
            {% endfor %}
          </select>
        </div>
      {% endfor %}
    {% endunless %}

    <select name="id" class="no-js" data-product-select>
      {% for variant in product.variants %}
        <option
          {% if variant == current_variant %}selected="selected"{% endif %}
          {% unless variant.available %}disabled="disabled"{% endunless %}
          value="{{ variant.id }}">
            {{ variant.title }}
        </option>
      {% endfor %}
    </select>
    <div class="product-quantity">
      <label for="Quantity">QTY</label>
      <input type="number" id="Quantity" name="quantity" value="1" min="1" max="99">
    </div>


    <div class="button-well">
      <div clss="standard-buy-section">
        <button
          type="submit"
          name="add"
          class="button"
          data-add-to-cart
          {% unless current_variant.available %}disabled="disabled"{% endunless %}>
            <span data-add-to-cart-text>
              {% if current_variant.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </span>
        </button>
      </div>
      {% if product.metafields.installment.show_installments %}
        <div class="smile-pay-wrapper">
          <div class="smile-pay__header">
            <h3>Pay only $80/month.</h3>
            <p>$250 downpayment. No credit check.</p>
          </div>
          <div class="installment-button__options">
            <script type="text/javascript" src="https://app.paywhirl.com/pw.js"></script>
            {% for variant in product.variants %}
              {% if variant.metafields.installment.widget_id %}
                <div class="installment-button__option {% if current_variant.id ==  variant.id %}--selected{% endif %}" data-variant-id="{{variant.id}}">
                  <div id='{{variant.metafields.installment.widget_id}}'></div>
                  <script>paywhirl('button',{autoscroll: 1, domain:'smile-direct-club' ,uuid:'{{variant.metafields.installment.uuid}}', button_text: 'Learn more' },'{{variant.metafields.installment.widget_id}}'); </script>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </form>
  <div class="rte product-info-description">
        {{ product.description }}
  </div>

      {% unless product == empty %}
        <script type="application/json" data-product-json>
          {{ product | json }}
        </script>
      {% endunless %}
      </div>
  </div>
</div>
