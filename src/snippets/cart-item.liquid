<div class="cart-item" id="product-{{item.id}}" data-product-id="{{item.id}}">
  {{ item | img_url: '220X220' | img_tag: item.title }}
  <div class="cart-item--content">
    <div class="cart-item--info">
      <h4>{{ item.product.title }}{% if item.product.has_only_default_variant == false %} ({{item.variant.title}}) {% endif %}</h4>
      <p>{{ item.price | money }}</p>
    </div>
    <div class="cart-item--actions">
      <div class="cart-item--incrementer">
        <button
          class="button button--text button--no-padding"
          data-product-current-quantity="{{item.quantity}}"
          data-product-increment-type="decrement"
          data-product-id="{{item.id}}"
        >
          -
        </button>
        <p data-product-quantity>{{ item.quantity }}</p>
        <button
          class="button button--text button--no-padding"
          data-product-current-quantity="{{item.quantity}}"
          data-product-increment-type="increment"
          data-product-id="{{item.id}}"
        >
          +
        </button>
      </div>
      <a href="#">Remove</a>
    </div>
  </div>
</div>