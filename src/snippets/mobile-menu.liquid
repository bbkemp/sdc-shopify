<section id="mobile-menu" class="mobile-menu">
  <form action="/search" class="mobileSearch" role="search">
    <input type="hidden" name="type" value="product">
    <input type="search" name="q" placeholder="{{ 'general.search.placeholder' | t }}">
    <button type="submit">
      {% include 'icon-search' %}
      <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
    </button>
  </form>
  <ul>
    {% for link in linklists[section.settings.menu].links %}
      {% if link.links != blank %}
        <li>
          <a href="{{ link.url }}">
            {{ link.title }}
            {% include 'icon-arrow-down' %}
          </a>
          <ul>
            {% for childlink in link.links %}
              <li>
                <a href="{{ childlink.url }}">
                  {{ childlink.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% else %}
        <li>
          <a href="{{ link.url }}">
            {{ link.title }}
          </a>
        </li>
      {% endif %}
    {% endfor %}

    {% if shop.customer_accounts_enabled %}
      {% if customer %}
        <li class="{% if template contains 'customers' %} active-nav-item highlighted-item {% endif %}">
          <a href="/account"><span>My Account</span></a>
        </li>
      {% else %}
        <li>
          {{ 'layout.customer.log_in' | t | customer_login_link }}
        </li>
      {% endif %}
    {% endif %}
  </ul>
</section>
