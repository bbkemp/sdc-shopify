{% unless template == 'collection' or template == 'index' or template == 'cart' or template == 'list-collections' %}
<div class="container breadcrumb-container">
  <nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
    {% if template contains 'page' %}
      <span>{{ page.title }}</span>

    {% elsif template contains 'product' %}
      {% assign collections_product_belongs = 0 %}
      {% for collection in product.collections %}
      {% assign collections_product_belongs = collections_product_belongs | plus: 1 %}
        {% if collection.url %}
          {% if collections_product_belongs == 1 %}
          {% else %}
            <span class="breadcrumb-amp" aria-hidden="true">&#65120;</span>
          {% endif %}
          <a class="bread-crumb-collection" href="{{ collection.url }}">{{ collection.title }}</a>
        {% endif %}
      {% endfor %}
      <span class="breadcrumb-arrow" aria-hidden="true">/</span>
      <span>{{ product.title  | strip_html }}</span>

    {% elsif template contains 'collection' and collection.handle %}
      {% if current_tags %}
        {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
        {{ collection.title | link_to: url }}
        <span class="breadcrumb-arrow" aria-hidden="true">/</span>
        <span>{{ current_tags | join: " + " }}</span>
      {% else %}
        <span>{{ collection.title }}</span>
      {% endif %}

    {% elsif template == 'blog' %}
      {% if current_tags %}
        {{ blog.title | link_to: blog.url }}
        <span class="breadcrumb-arrow" aria-hidden="true">/</span>
        <span>{{ current_tags | join: " + " }}</span>
      {% else %}
      <span>{{ blog.title }}</span>
      {% endif %}

    {% elsif template == 'article' %}
      {{ blog.title | link_to: blog.url }}
      <span class="breadcrumb-arrow" aria-hidden="true">/</span>
      <span>{{ article.title }}</span>

    {% else %}
     <span>{{ page_title }}</span>
    {% endif %}
  </nav>
</div>
{% endunless %}
